@{
    Layout = null;
    ViewBag.Title = "Forgot Password - MySUQC";
}

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/forgotpw.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cal+Sans&display=swap" rel="stylesheet">

    <!-- Top Banner -->
    <div class="top-bar"></div>

    <div class="login-container">
        @* Forgot Password Form *@
        <form class="login-form">

            <h2>Forgot Password</h2>

            <!-- Step 1: Enter Email -->
            <div class="form-step" id="step-1">
                <label for="email">Email Address</label>
                <input type="email" id="email" class="form-control" placeholder="Enter your email" required>
                <button type="button" class="step-btn" id="to-step-2">Next</button>
            </div>

            <!-- Step 2: Verify Code -->
            <div class="form-step hidden" id="step-2">
                <p class="text-bg-light">Enter the code sent to <span id="user-email"></span></p>
                <label for="verification-code">Verification Code</label>
                <input type="text" id="verification-code" class="form-control" placeholder="Enter code" required>
                <div class="step-buttons">
                    <button type="button" class="step-btn" id="prev-step-2">Previous</button>
                    <button type="button" class="step-btn" id="to-step-3">Next</button>
                </div>
            </div>

            <!-- Step 3: Reset Password -->
            <div class="form-step hidden" id="step-3">
                <label for="new-password">New Password</label>
                <div class="password-wrapper">
                    <input type="password" id="new-password" class="form-control" placeholder="Enter new password" required>
                    <span class="toggle-password" onclick="togglePassword('new-password')">👁</span>
                </div>

                <label for="confirm-password">Confirm Password</label>
                <div class="password-wrapper">
                    <input type="password" id="confirm-password" class="form-control" placeholder="Confirm new password" required>
                    <span class="toggle-password" onclick="togglePassword('confirm-password')">👁</span>
                </div>

                <div class="step-buttons">
                    <button type="button" class="step-btn" id="prev-step-3">Previous</button>
                    <button type="submit" class="step-btn">Reset Password</button>
                </div>
            </div>

            <div class="form-links">
                <a href="@Url.Action("Login", "Account")">Back to Login</a>
            </div>

        </form>
    </div>

    <script src="~/js/forgotpw.js"> </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>