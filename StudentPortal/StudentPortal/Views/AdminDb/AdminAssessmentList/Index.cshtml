@model SIA_IPT.Models.AdminAssessmentList.AdminAssessmentListViewModel

@{
    ViewData["Title"] = "Assessment List (Admin)";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/admindb/adminassessmentlist.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/BottomBar.css" asp-append-version="true" />
</head>
<body>
    <div class="page">
        <main class="assessment-container">
            <div class="assessment-grid" id="assessmentGrid">
                @foreach (var a in Model.Assessments)
                {
                    <div class="assessment-card">
                        <div class="assessment-top">
                            <div class="assessment-header">Assessment</div>
                            <div class="assessment-subtitle">Posted</div>
                            <div class="paper-line"></div>
                            <div class="paper-line"></div>
                            <div class="card-icons">
                                <i class="fa-solid fa-ellipsis-vertical ellipsis-icon" title="Options"></i>
                                <i class="fa-solid fa-trash delete-icon" title="Delete"></i>
                            </div>
                        </div>
                        <div class="assessment-bottom">
                            <div class="assessment-title">@a.Title</div>
                        </div>
                    </div>
                }
            </div>

            <!-- Floating Create Assessment Button -->
            <button id="createAssessmentBtn" class="create-assessment-btn" title="Create Assessment">
                <i class="fa-solid fa-plus"></i>
            </button>
        </main>

  <!-- Delete Confirmation Modal -->
        <div id="deleteModal" class="delete-modal">
            <div class="delete-modal-content">
                <h3>Delete Assessment</h3>
                <p>Are you sure you want to delete this assessment?</p>
                <div class="modal-buttons">
                    <button id="confirmDelete" class="btn danger">Delete</button>
                    <button id="cancelDelete" class="btn">Cancel</button>
                </div>
            </div>
        </div>

        <!-- Create Assessment Confirmation Modal -->
        <div id="createModal" class="delete-modal">
            <div class="delete-modal-content">
                <h3>Create an assessment?</h3>
                <p>Would you like to create a new assessment?</p>
                <div class="modal-buttons">
                    <button id="confirmCreate" class="btn success">Yes</button>
                    <button id="cancelCreate" class="btn">No</button>
                </div>
            </div>
        </div>

        <!-- Toast Notification -->
        <div id="toast" class="toast"></div>

        <!-- No JS file; rendered server-side -->
        @{ ViewBag.CurrentPage = "assessment"; }
        @await Html.PartialAsync("_AdminBottomBar")
    </div>

    
</body>
</html>
