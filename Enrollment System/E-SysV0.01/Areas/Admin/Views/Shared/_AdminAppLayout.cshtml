                </li>

                <li class="sidebar-separator mt-3 mb-2">
                </li>
                <li><a href="@Url.Action("AdminPosting", "Admin", new { area = "Admin" })"><i class="fas fa-bullhorn"></i> Announcement </a></li>
                <li><a href="@Url.Action("AdminSettings", "Admin", new { area = "Admin" })"><i class="fas fa-flask"></i> Admin Settings</a></li>
                <li><a href="@Url.Action("Archive", "Admin", new { area = "Admin" })"> <i class="fas fa-archive me-1"></i> Archive</a></li>
            </ul>
        </div>
        <div class="sidebar-bottom">
            <form asp-area="Admin" asp-controller="Admin" asp-action="Logout" method="post">


                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-link p-0" style="color:white; text-decoration:none;">Log Out</button>
            </form>
        </div>
    </div>

    <header class="fixed-header">
        <div class="header-title">
            <span>@title</span>
        </div>
        <div class="header-content d-flex align-items-center gap-3">
            <div class="notif-dropdown">
                <button id="notifBtn" class="btn btn-link text-decoration-none position-relative">
                    <i class="fas fa-bell"></i>
                    <span id="notifBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">0</span>
                </button>
                <div id="notifPanel" class="notif-panel p-2">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <strong>Notifications</strong>
                        <div class="d-flex gap-2">
                            <button id="markAllRead" class="btn btn-sm btn-outline-secondary">Mark as all read</button>
                            <button id="clearNotif" class="btn btn-sm btn-outline-danger">Clear</button>
                        </div>
                    </div>
                    <div class="d-flex gap-3 mb-2 small">
                        <div class="form-check m-0">
                            <input class="form-check-input" type="checkbox" id="settingSound">
                            <label class="form-check-label" for="settingSound">Sound</label>
                        </div>
                        <div class="form-check m-0">
                            <input class="form-check-input" type="checkbox" id="settingBrowser">
                            <label class="form-check-label" for="settingBrowser">Browser pop-ups</label>
                        </div>
                    </div>
                    <div id="notifList" class="notif-list"></div>
                    <div id="notifEmpty" class="text-muted small">No notifications.</div>
                </div>
            </div>



            <span>@User?.Identity?.Name</span>
            <i class="fas fa-user-circle"></i>
        </div>
    </header>

    <div class="main-content">
        @RenderBody()
        <footer><p>&copy; @DateTime.Now.Year - Enrollment System</p></footer>
    </div>
    <audio id="notifSound" preload="auto">
        <source src="~/audio/beep.wav" type="audio/wav">
    </audio>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-notifications.js"></script>
    <script>

          // NEW: Typeahead search
        (function () {
            const form = document.getElementById('adminSearchForm');
            const input = document.getElementById('adminSearchInput');
            const panel = document.getElementById('adminSearchPanel');

            let lastQuery = '';
            let timer = null;

            function hidePanel() { panel.classList.remove('show'); }
            function showPanel() { panel.classList.add('show'); }
            function clearPanel() { panel.innerHTML = ''; }

            function render(items) {
                clearPanel();
                if (!items || items.length === 0) {
                    panel.innerHTML = '<div class="search-empty">No matches.</div>';
                    showPanel();
                    return;
                }
                const frag = document.createDocumentFragment();
                items.forEach(it => {
                    const div = document.createElement('div');
                    div.className = 'search-item';
                    div.innerHTML = `
                        <a href="${it.link}">
                            <div><strong>${it.fullName}</strong></div>
                            <div class="search-meta">
                                ${it.email} • ${it.type} • <span class="badge bg-secondary">${it.status}</span>
                            </div>
                        </a>`;
                    frag.appendChild(div);
                });
                panel.appendChild(frag);
                showPanel();
            }

            async function search(q) {
                if (!q || q.length < 2) { hidePanel(); return; }
                lastQuery = q;
                try {
                    const url = '@Url.Action("Search", "Admin", new { area = "Admin" })' + `?q=${encodeURIComponent(q)}&take=8`;
                    const resp = await fetch(url, { method: 'GET' });
                    if (!resp.ok) { hidePanel(); return; }
                    const data = await resp.json();
                    render(data.items || []);
                } catch {
                    hidePanel();
                }
            }

            function debounceSearch() {
                const q = (input.value || '').trim();
                clearTimeout(timer);
                timer = setTimeout(() => search(q), 200);
            }

            input.addEventListener('input', debounceSearch);
            input.addEventListener('focus', () => {
                if ((input.value || '').trim().length >= 2) showPanel();
            });

            form.addEventListener('submit', (e) => {
                e.preventDefault();
                const q = (input.value || '').trim();
                if (!q) { hidePanel(); return; }
                // If there is only one current item, navigate; else show panel
                const items = panel.querySelectorAll('.search-item a');
                if (items.length === 1) {
                    window.location.href = items[0].getAttribute('href');
                } else {
                    search(q);
                }
            });

            document.addEventListener('click', (e) => {
                const within = form.contains(e.target) || panel.contains(e.target);
                if (!within) hidePanel();
            });
              window.AdminLoading = (function () {
            const overlay = document.getElementById('admin-loading-overlay');
            const textEl = document.getElementById('admin-loading-text');
            function show(text) {
                if (textEl) textEl.textContent = text || 'Processing...';
                overlay?.classList.remove('d-none');
            }
            function hide() {
                overlay?.classList.add('d-none');
                if (textEl) textEl.textContent = '';
            }
            return { show, hide };

        })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>