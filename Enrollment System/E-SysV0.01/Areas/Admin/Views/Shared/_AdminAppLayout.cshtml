                                <i class="fas fa-hourglass-start"></i> 1st Semester
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Pending2ndSem">
                                <i class="fas fa-hourglass-start"></i> 2nd Semester
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-check me-1"></i>Enrolled Records
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Enrolled">
                                <i class="fas fa-list me-1"></i> 1st Semester
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Enrolled2ndSem">
                                <i class="fas fa-list me-1"></i> 2nd Semester
                            </a>
                        </li>
                    </ul>
                </li>
                <li><a href="@Url.Action("OnHold", "Admin", new { area = "Admin" })"><i class="fas fa-pause-circle"></i> On Hold</a></li>
                <li><a href="@Url.Action("Rejected", "Admin", new { area = "Admin" })"><i class="fas fa-times-circle"></i> Rejected</a></li>
                <li class="sidebar-separator mt-3 mb-2">
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-check me-1"></i>Shifter Records (WIP)
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="PendingShifter">
                                <i class="fas fa-clock me-1"></i> Pending Shifter
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="AcceptedShifter">
                                <i class="fas fa-check-circle me-1"></i> Accepted Shifter
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="OnHoldShifter">
                                <i class="fas fa-pause-circle me-1"></i> On-Hold Shifter
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="RejectedShifter">
                                <i class="fas fa-times-circle me-1"></i> Rejected Shifter
                            </a>
                        </li>
