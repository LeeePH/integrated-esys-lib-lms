@model List<ShifterEnrollmentRequest>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminAppLayout.cshtml";
    ViewData["Title"] = ViewBag.Title ?? "Accepted Shifter Requests";
    var filterAction = ViewBag.FilterAction ?? "AcceptedShifter";
    var filterQ = ViewBag.FilterQ ?? "";
    var filterProgram = ViewBag.FilterProgram ?? "";
    var settings = ViewBag.EnrollmentSettings as EnrollmentSettings;
}

<style>
    .accepted-card {
        border-left: 4px solid #28a745;
    }
    .accepted-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        transition: all 0.2s;
    }
</style>

<div class="container-fluid py-3">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3><i class="fas fa-check-circle me-2 text-success"></i>@ViewBag.Title</h3>
            <p class="text-muted mb-0">
                <span class="badge bg-success">@Model.Count accepted shifters</span>
                @if (settings != null)
                {
                    <span class="ms-2">
                        <i class="fas fa-calendar me-1"></i>@settings.Semester • AY @settings.AcademicYear
                    </span>
                }
            </p>
        </div>
        <div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" asp-action="@filterAction" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Search</label>
                    <input type="text" name="q" value="@filterQ" class="form-control" 
                           placeholder="Name, email, or student ID...">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Program</label>
                    <select name="program" class="form-select">
                        <option value="">All Programs</option>
                        <option value="BSIT" selected="@(filterProgram == "BSIT" ? "selected" : null)">BSIT</option>
                        <option value="BSENT" selected="@(filterProgram == "BSENT" ? "selected" : null)">BSENT</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Request List -->
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            No accepted shifter requests found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>From Program</th>
                        <th>To Program</th>
                        <th>Units Earned</th>
                        <th>Submitted</th>
                        <th>Accepted</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.OrderByDescending(r => r.ReviewedDate ?? r.SubmittedDate))
                    {
                        <tr>
                            <td><strong>@request.StudentUsername</strong></td>
                            <td>@request.FirstName @request.LastName</td>
                            <td>@request.Email</td>
                            <td><span class="badge bg-secondary">@request.CourseLastEnrolled</span></td>
                            <td><span class="badge bg-success">@request.CourseApplyingToShift</span></td>
                            <td>@request.TotalUnitsEarned units</td>
                            <td>@request.SubmittedDate.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>@request.ReviewedDate?.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>
                                <a asp-action="RequestDetailsShifter" asp-route-id="@request.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Summary Stats -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h4 class="text-success mb-0">@Model.Count</h4>
                        <small class="text-muted">Total Accepted</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <h4 class="text-info mb-0">@Model.Where(r => r.CourseApplyingToShift == "BSIT").Count()</h4>
                        <small class="text-muted">Shifted to BSIT</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <h4 class="text-primary mb-0">@Model.Where(r => r.CourseApplyingToShift == "BSENT").Count()</h4>
                        <small class="text-muted">Shifted to BSENT</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>