@model List<ShifterEnrollmentRequest>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminAppLayout.cshtml";
    ViewData["Title"] = ViewBag.Title ?? "Rejected Shifter Requests";
    var filterAction = ViewBag.FilterAction ?? "RejectedShifter";
    var filterQ = ViewBag.FilterQ ?? "";
    var filterProgram = ViewBag.FilterProgram ?? "";
    var settings = ViewBag.EnrollmentSettings as EnrollmentSettings;
}

<style>
    .rejected-card {
        border-left: 4px solid #dc3545;
    }

        .rejected-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            transition: all 0.2s;
        }
</style>

<div class="container-fluid py-3">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3><i class="fas fa-times-circle me-2 text-danger"></i>@ViewBag.Title</h3>
            <p class="text-muted mb-0">
                <span class="badge bg-danger">@Model.Count rejected requests</span>
                @if (settings != null)
                {
                    <span class="ms-2">
                        <i class="fas fa-calendar me-1"></i>@settings.Semester • AY @settings.AcademicYear
                    </span>
                }
            </p>
        </div>
        <div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" asp-action="@filterAction" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Search</label>
                    <input type="text" name="q" value="@filterQ" class="form-control"
                           placeholder="Name, email, or student ID...">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Program</label>
                    <select name="program" class="form-select">
                        <option value="">All Programs</option>
                        <option value="BSIT" selected="@(filterProgram == "BSIT" ? "selected" : null)">BSIT</option>
                        <option value="BSENT" selected="@(filterProgram == "BSENT" ? "selected" : null)">BSENT</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Request List -->
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            No rejected shifter requests found.
        </div>
    }
    else
    {
        @foreach (var request in Model.OrderByDescending(r => r.ReviewedDate ?? r.SubmittedDate))
        {
            <div class="card rejected-card mb-3">
                <div class="card-header bg-danger text-white d-flex justify-content-between">
                    <h6 class="mb-0">
                        <i class="fas fa-user-times me-2"></i>
                        @request.FirstName @request.LastName (@request.StudentUsername)
                    </h6>
                    <small>Rejected: @request.ReviewedDate?.ToLocalTime().ToString("MMM dd, yyyy")</small>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1">
                                <strong>Email:</strong> @request.Email<br />
                                <strong>Contact:</strong> @request.ContactNumber
                            </p>
                            <div class="d-flex align-items-center mt-2">
                                <span class="badge bg-secondary me-2">@request.CourseLastEnrolled</span>
                                <i class="fas fa-arrow-right text-muted mx-2"></i>
                                <span class="badge bg-danger">@request.CourseApplyingToShift</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-danger mb-0">
                                <strong><i class="fas fa-exclamation-triangle me-2"></i>Rejection Reason:</strong>
                                <p class="mb-0 mt-1" style="white-space: pre-wrap;">@request.AdminNotes</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        Submitted: @request.SubmittedDate.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")
                    </small>
                    <a asp-action="RequestDetailsShifter" asp-route-id="@request.Id"
                       class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-eye me-1"></i>View Details
                    </a>
                </div>
            </div>
        }
    }
</div>