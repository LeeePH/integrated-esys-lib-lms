@model E_SysV0._01.Models.StudentDashboardViewModel
@{
    ViewData["Title"] = "Select Subjects";

    // Document keys used by admin (keep in sync with server)
    var docs = new[] { "Form138", "GoodMoral", "Diploma", "MedicalCertificate", "CertificateOfIndigency", "BirthCertificate" };
    var docLabels = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        ["Form138"] = "Form 138",
        ["GoodMoral"] = "Good Moral",
        ["Diploma"] = "Diploma",
        ["MedicalCertificate"] = "Medical Certificate",
        ["CertificateOfIndigency"] = "Certificate of Indigency",
        ["BirthCertificate"] = "Birth Certificate"
    };
    var flags = ViewBag.DocumentFlags as IDictionary<string, string> ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
    int submittedCount = docs.Count(d => flags.TryGetValue(d, out var v) && string.Equals(v, "Submitted", StringComparison.OrdinalIgnoreCase));

    // ✅ Get retake opportunities from ViewBag
    var retakeOpportunities = ViewBag.RetakeOpportunities as List<E_SysV0._01.Models.SubjectRetakeHelper.RetakeOpportunity>
        ?? new List<E_SysV0._01.Models.SubjectRetakeHelper.RetakeOpportunity>();

    var eligibleRetakes = retakeOpportunities.Where(r => r.IsEligible).ToList();
    var ineligibleRetakes = retakeOpportunities.Where(r => !r.IsEligible).ToList();

    var enrolledYearLevel = ViewBag.EnrolledYearLevel as string ?? "1st Year";
    var targetYearLevel = ViewBag.TargetYearLevel as string ?? "1st Year";
    var targetSemester = ViewBag.TargetSemester as string ?? "2nd Semester";

    var is2ndYearEnrollment = enrolledYearLevel.Contains("2nd Year", StringComparison.OrdinalIgnoreCase);
    var requiresCompliance = !is2ndYearEnrollment;

    var pageTitle = is2ndYearEnrollment ? "Select Subjects — 2nd Year 2nd Semester" : "Select Subjects — 2nd Semester";
}

<style>
    .retake-section {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
        border-left: 4px solid #dc3545;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .retake-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.875rem;
        font-weight: 600;
    }

        .retake-badge.failed {
            background-color: #dc3545;
            color: white;
        }

        .retake-badge.available {
            background-color: #28a745;
            color: white;
        }

        .retake-badge.blocked {
            background-color: #6c757d;
            color: white;
        }

    .subject-card {
        transition: all 0.2s ease;
        border: 2px solid transparent;
    }

        .subject-card:hover {
            border-color: #007bff;
            box-shadow: 0 4px 12px rgba(0,123,255,0.15);
        }

        .subject-card.retake-subject {
            border-left: 4px solid #dc3545;
            background-color: #fff9f9;
        }

        .subject-card.disabled {
            opacity: 0.6;
            pointer-events: none;
            background-color: #f8f9fa;
        }

    .prerequisite-info {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    .unit-summary {
        position: sticky;
        top: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 1rem;
    }

    .unit-breakdown {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid #e9ecef;
    }

        .unit-breakdown:last-child {
            border-bottom: none;
            font-weight: 600;
            font-size: 1.1rem;
        }

    .unit-warning {
        background-color: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 0.75rem;
        margin-top: 0.5rem;
        border-radius: 4px;
    }
</style>

<section class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
                <h4 class="mb-0">@pageTitle</h4>
                <small class="text-muted">Choose subjects you are eligible for. Subjects blocked by prerequisites are disabled.</small>
            </div>

            @if (requiresCompliance)
            {
                <div class="text-end">
                    <div class="small text-muted">Document compliance</div>
                    <div class="mt-1">
                        <span class="badge bg-@(submittedCount == docs.Length ? "success" : "secondary")">
                            @submittedCount / @docs.Length submitted
                        </span>
                        <button id="refreshCompliance" class="btn btn-sm btn-outline-secondary ms-2" title="Refresh compliance status">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="text-end">
                    <div class="alert alert-success mb-0 py-1 px-2">
                        <i class="fas fa-check-circle me-1"></i>
                        <small>Documents validated (1st year)</small>
                    </div>
                </div>
            }
        </div>

        <form id="subjectSelectionForm" asp-area="Student" asp-controller="StudentAccount" asp-action="SubmitIrregularSelection" method="post">
            @Html.AntiForgeryToken()
            <div class="row gx-3">
                <div class="col-lg-8">

                    @* ✅ NEW: Retake Opportunities Section *@
                    @if (eligibleRetakes.Any() || ineligibleRetakes.Any())
                    {
                        <div class="retake-section mb-4">
                            <h5 class="mb-3">
                                <i class="fas fa-redo-alt me-2"></i>
                                Retake Opportunities
                            </h5>
                            <p class="small text-muted mb-3">
                                The following subjects from previous semesters are available for retake. Retake subjects count toward your total unit load.
                            </p>

                            @if (eligibleRetakes.Any())
                            {
                                <div class="list-group mb-3">
                                    @foreach (var retake in eligibleRetakes)
                                    {
                                        var retakeEligibility = Model.SecondSemesterEligibility.ContainsKey(retake.Code)
                                        ? Model.SecondSemesterEligibility[retake.Code]
                                        : "Can enroll (Retake)";

                                        <label class="list-group-item list-group-item-action d-flex align-items-start subject-card retake-subject">
                                            <div class="form-check me-3">
                                                <input class="form-check-input subject-checkbox retake-checkbox"
                                                       type="checkbox"
                                                       name="selectedSubjects"
                                                       value="@retake.Code"
                                                       id="retake_@retake.Code"
                                                       data-units="@retake.Units"
                                                       data-is-retake="true">
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <div>
                                                        <strong>@retake.Code</strong> — @retake.Title
                                                        <span class="retake-badge failed ms-2">
                                                            <i class="fas fa-times-circle"></i> Failed
                                                        </span>
                                                        <span class="retake-badge available ms-1">
                                                            <i class="fas fa-redo"></i> Retake Available
                                                        </span>
                                                    </div>
                                                    <span class="badge bg-primary">@retake.Units units</span>
                                                </div>
                                                @if (!string.IsNullOrWhiteSpace(retake.PreRequisite))
                                                {
                                                    <div class="prerequisite-info">
                                                        <i class="fas fa-info-circle"></i>
                                                        Prerequisites: @retake.PreRequisite
                                                    </div>
                                                }
                                                <div class="prerequisite-info text-success">
                                                    <i class="fas fa-check-circle"></i> @retakeEligibility
                                                </div>
                                            </div>
                                        </label>
                                    }
                                </div>
                            }

                            @if (ineligibleRetakes.Any())
                            {
                                <details class="mb-3">
                                    <summary class="text-muted" style="cursor: pointer;">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        @ineligibleRetakes.Count subject(s) not available for retake this semester
                                    </summary>
                                    <div class="list-group mt-2">
                                        @foreach (var retake in ineligibleRetakes)
                                        {
                                            <div class="list-group-item subject-card disabled">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <div>
                                                        <strong>@retake.Code</strong> — @retake.Title
                                                        <span class="retake-badge blocked ms-2">
                                                            <i class="fas fa-ban"></i> Not Available
                                                        </span>
                                                    </div>
                                                    <span class="badge bg-secondary">@retake.Units units</span>
                                                </div>
                                                <div class="prerequisite-info text-danger">
                                                    <i class="fas fa-times-circle"></i> @retake.IneligibilityReason
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </details>
                            }
                        </div>
                    }

                    @* Regular Subjects Section *@
                    <h5 class="mb-3">
                        <i class="fas fa-book me-2"></i>
                        Regular Subjects (@targetYearLevel @targetSemester)
                    </h5>

                    <div class="list-group">
                        @foreach (var s in Model.SecondSemesterSubjects)
                        {
                            var eligibility = Model.SecondSemesterEligibility.ContainsKey(s.Code)
                            ? Model.SecondSemesterEligibility[s.Code]
                            : "Pending evaluation";

                            var canEnroll = eligibility.StartsWith("Can enroll", StringComparison.OrdinalIgnoreCase);
                            var isRetake = eligibility.Contains("Retake", StringComparison.OrdinalIgnoreCase);
                            var badgeClass = canEnroll ? "bg-success text-white" : "bg-danger text-white";
                            var disabledClass = !canEnroll ? "disabled" : "";

                            <label class="list-group-item list-group-item-action d-flex align-items-start subject-card @disabledClass">
                                <div class="form-check me-3">
                                    <input class="form-check-input subject-checkbox regular-checkbox"
                                           type="checkbox"
                                           name="selectedSubjects"
                                           value="@s.Code"
                                           id="subject_@s.Code"
                                           data-units="@s.Units"
                                           data-is-retake="false"
                                           disabled="@(!canEnroll)">
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <strong>@s.Code</strong> — @s.Title
                                            @if (isRetake)
                                            {
                                                <span class="retake-badge failed ms-2">
                                                    <i class="fas fa-redo"></i> Retake
                                                </span>
                                            }
                                        </div>
                                        <span class="badge bg-primary">@s.Units units</span>
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(s.PreRequisite))
                                    {
                                        <div class="prerequisite-info">
                                            <i class="fas fa-info-circle"></i>
                                            Prerequisites: @s.PreRequisite
                                        </div>
                                    }
                                    <div class="prerequisite-info">
                                        <span class="badge @badgeClass">@eligibility</span>
                                    </div>
                                </div>
                            </label>
                        }
                    </div>
                </div>

                @* Sidebar: Unit Summary *@
                <div class="col-lg-4">
                    <div class="unit-summary">
                        <h6 class="mb-3">
                            <i class="fas fa-calculator me-2"></i>
                            Unit Load Summary
                        </h6>

                        <div class="unit-breakdown">
                            <span class="text-muted">Regular Subjects:</span>
                            <span id="regularUnitsDisplay" class="badge bg-info">0 units</span>
                        </div>

                        <div class="unit-breakdown">
                            <span class="text-muted">Retake Subjects:</span>
                            <span id="retakeUnitsDisplay" class="badge bg-warning">0 units</span>
                        </div>

                        <div class="unit-breakdown">
                            <span>Total Units:</span>
                            <span id="totalUnitsDisplay" class="badge bg-primary">0 units</span>
                        </div>

                        <div id="unitWarning" class="unit-warning d-none">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Unit Load Exceeds Maximum!</strong>
                            <p class="mb-0 small mt-1">You have selected <span id="warningUnits"></span> units. The recommended maximum is 24 units. Admin approval may be required.</p>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                                <i class="fas fa-check-circle me-2"></i>
                                Submit Selection
                            </button>
                        </div>

                        <div class="alert alert-info mt-3 small">
                            <i class="fas fa-info-circle me-1"></i>
                            <strong>Note:</strong> Retake subjects count toward your total unit load and are marked for admin review.
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        (function () {
            const form = document.getElementById('subjectSelectionForm');
            const checkboxes = document.querySelectorAll('.subject-checkbox');
            const regularUnitsDisplay = document.getElementById('regularUnitsDisplay');
            const retakeUnitsDisplay = document.getElementById('retakeUnitsDisplay');
            const totalUnitsDisplay = document.getElementById('totalUnitsDisplay');
            const unitWarning = document.getElementById('unitWarning');
            const warningUnits = document.getElementById('warningUnits');
            const submitBtn = document.getElementById('submitBtn');

            const MAX_UNITS = 24;

            function updateUnitSummary() {
                let regularUnits = 0;
                let retakeUnits = 0;

                checkboxes.forEach(cb => {
                    if (cb.checked) {
                        const units = parseInt(cb.dataset.units) || 0;
                        const isRetake = cb.dataset.isRetake === 'true';

                        if (isRetake) {
                            retakeUnits += units;
                        } else {
                            regularUnits += units;
                        }
                    }
                });

                const totalUnits = regularUnits + retakeUnits;

                regularUnitsDisplay.textContent = `${regularUnits} units`;
                retakeUnitsDisplay.textContent = `${retakeUnits} units`;
                totalUnitsDisplay.textContent = `${totalUnits} units`;

                // Show warning if exceeds maximum
                if (totalUnits > MAX_UNITS) {
                    unitWarning.classList.remove('d-none');
                    warningUnits.textContent = totalUnits;
                    submitBtn.classList.remove('btn-primary');
                    submitBtn.classList.add('btn-warning');
                } else {
                    unitWarning.classList.add('d-none');
                    submitBtn.classList.remove('btn-warning');
                    submitBtn.classList.add('btn-primary');
                }

                // Disable submit if no subjects selected
                submitBtn.disabled = totalUnits === 0;
            }

            checkboxes.forEach(cb => {
                cb.addEventListener('change', updateUnitSummary);
            });

            // Initial calculation
            updateUnitSummary();

            // Form submission validation
            form.addEventListener('submit', function(e) {
                const selectedCount = Array.from(checkboxes).filter(cb => cb.checked).length;

                if (selectedCount === 0) {
                    e.preventDefault();
                    alert('Please select at least one subject to enroll.');
                    return false;
                }

                const totalUnits = parseInt(totalUnitsDisplay.textContent) || 0;
                if (totalUnits > MAX_UNITS) {
                    const confirmed = confirm(`You have selected ${totalUnits} units, which exceeds the recommended maximum of ${MAX_UNITS} units. This may require special approval. Do you want to proceed?`);
                    if (!confirmed) {
                        e.preventDefault();
                        return false;
                    }
                }
            });

            // Refresh compliance button
            const refreshBtn = document.getElementById('refreshCompliance');
            if (refreshBtn) {
                refreshBtn.addEventListener('click', function() {
                    location.reload();
                });
            }
        })();
    </script>
}