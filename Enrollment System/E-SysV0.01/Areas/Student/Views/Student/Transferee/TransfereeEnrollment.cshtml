                        const ms = closesAt.getTime() - now.getTime();
                        if (ms <= 0) {
                            setClosedUI();
                            clearInterval(timer);
                            return;
                        }
                        const totalSeconds = Math.floor(ms / 1000);
                        const days = Math.floor(totalSeconds / 86400);
