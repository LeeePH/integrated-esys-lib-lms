@{
    Layout = "~/Views/Shared/ESys_Layout.cshtml";
    ViewData["Title"] = "Reset Password";
    var email = ViewBag.Email as string ?? "";
    var token = ViewBag.Token as string ?? "";
}
<div class="container py-4">
    <h3>Reset Password</h3>
    <p>Enter a new password that meets the requirements.</p>

    @if (TempData["Error"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <form asp-area="Student" asp-controller="StudentAccount" asp-action="ResetPassword" method="post" class="w-100 mw-400">
        @Html.AntiForgeryToken()
        <input type="hidden" name="email" value="@email" />
        <input type="hidden" name="token" value="@token" />

        <div class="mb-3">
            <label class="form-label">New password</label>
            <input type="password" name="newPassword" id="newPassword" class="form-control" required autocomplete="new-password" />
            <div class="form-text">At least 8 characters, uppercase, lowercase, digit and symbol; no spaces.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Confirm new password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required autocomplete="new-password" />
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Reset password</button>
            <a asp-area="Student" asp-controller="StudentAccount" asp-action="StudentLogin" class="btn btn-link">Back to login</a>
        </div>
    </form>
</div>