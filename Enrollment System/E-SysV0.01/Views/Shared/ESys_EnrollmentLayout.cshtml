<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "E_SysV0._01") - E_SysV0._01</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/EnrollmentStyles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
@{
        var area = (ViewContext.RouteData.Values["area"] as string) ?? string.Empty;
        var controller = (ViewContext.RouteData.Values["controller"] as string) ?? string.Empty;
        var action = (ViewContext.RouteData.Values["action"] as string) ?? string.Empty;

        bool isStudentLoginLanding = area.Equals("Student", StringComparison.OrdinalIgnoreCase)
                                                                && controller.Equals("StudentAccount", StringComparison.OrdinalIgnoreCase)
                                                                && action.Equals("StudentLogin", StringComparison.OrdinalIgnoreCase);

        bool hideNavForEdit = area.Equals("Student", StringComparison.OrdinalIgnoreCase)
                                                && controller.Equals("EditEnrollments", StringComparison.OrdinalIgnoreCase)
                                                && (action.Equals("EditEnrollment", StringComparison.OrdinalIgnoreCase)
                                                        || action.Equals("EditTransfereeEnrollment", StringComparison.OrdinalIgnoreCase));
}
<body>
    <div>
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <footer class="top-navbar px-4 py-3 text-white" style="background-color: #00334C;">
        <div class="d-flex">
            <div>
                <p><strong>Philippine State University</strong></p>
                <small>Committed to providing excellence in education.</small>
            </div>

            <div class="ms-auto text-end">
                <p><strong id="contactPhone">09978276531</strong></p>
                <strong id="contactEmail">info@psu.edu.ph</strong>
            </div>
        </div>
    </footer>

</body>
</html>