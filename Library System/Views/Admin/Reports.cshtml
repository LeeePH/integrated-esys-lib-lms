            // Make overdue table sortable and attach header click handlers
            document.addEventListener('DOMContentLoaded', function() {
                try {
                    const overdueTable = document.getElementById('overdueTable');
                    if (!overdueTable) return;

                    const thead = overdueTable.querySelector('thead');
                    if (!thead) return;

                    // Track sort state per column
                    const sortState = {};

                    function parseCellValue(type, cell) {
                        const text = (cell && cell.innerText) ? cell.innerText.trim() : '';
                        if (!text) return '';
                        if (type === 'number') {
                            // Days Overdue: "12 day(s)" or badge content
                            const m = text.match(/(-?\d+)/);
                            return m ? parseInt(m[1], 10) : 0;
                        }
                        if (type === 'currency') {
                            // Remove non-numeric characters
                            const cleaned = text.replace(/[^0-9.-]+/g, '');
                            const v = parseFloat(cleaned);
                            return isNaN(v) ? 0 : v;
                        }
                        if (type === 'date') {
                            // Expecting MM/dd/yyyy (as rendered) or ISO
                            const d = Date.parse(text);
                            if (!isNaN(d)) return d;
                            // Try MM/dd/yyyy
                            const parts = text.split('/');
                            if (parts.length === 3) {
                                const month = parseInt(parts[0], 10) - 1;
                                const day = parseInt(parts[1], 10);
                                const year = parseInt(parts[2], 10);
                                const dt = new Date(year, month, day);
                                return dt.getTime();
                            }
                            return 0;
                        }
                        return text.toLowerCase();
                    }

                    function sortTableByColumn(colIndex, type, asc) {
                        const tbody = overdueTable.querySelector('tbody');
                        if (!tbody) return;

                        // separate footer row (total) if present
                        const allRows = Array.from(tbody.querySelectorAll('tr'));
                        let footerRows = [];
                        const bodyRows = allRows.filter(r => !r.classList.contains('table-warning'));
                        footerRows = allRows.filter(r => r.classList.contains('table-warning'));

                        bodyRows.sort((a, b) => {
                            const aCell = a.children[colIndex];
                            const bCell = b.children[colIndex];
                            const aVal = parseCellValue(type, aCell);
                            const bVal = parseCellValue(type, bCell);

                            if (typeof aVal === 'number' && typeof bVal === 'number') {
                                return asc ? aVal - bVal : bVal - aVal;
                            }
                            if (typeof aVal === 'number' && typeof bVal !== 'number') return asc ? -1 : 1;
                            if (typeof aVal !== 'number' && typeof bVal === 'number') return asc ? 1 : -1;
                            // string compare
                            if (aVal < bVal) return asc ? -1 : 1;
                            if (aVal > bVal) return asc ? 1 : -1;
                            return 0;
                        });

                        // re-append rows
                        bodyRows.forEach(r => tbody.appendChild(r));
                        footerRows.forEach(r => tbody.appendChild(r));
                    }

                    // attach click handlers
                    Array.from(thead.querySelectorAll('th')).forEach(th => {
                        th.style.userSelect = 'none';
                        th.addEventListener('click', function() {
                            const col = parseInt(th.getAttribute('data-col') || '-1', 10);
                            if (col < 0) return;
                            const type = th.getAttribute('data-type') || 'string';
                            sortState[col] = !sortState[col]; // toggle
                            sortTableByColumn(col, type, sortState[col]);

                            // update indicators
                            document.querySelectorAll('#overdueTable thead th .sort-indicator').forEach(si => si.innerText = '');
                            const ind = th.querySelector('.sort-indicator');
                            if (ind) ind.innerText = sortState[col] ? ' ▲' : ' ▼';
                        });
                    });

                    // initialize admin overdue books table sorting and buttons
                    try {
                        const booksTable = document.getElementById('adminOverdueBooksTable');
                        if (booksTable) {
                            // generic parser similar to parseCellValue above
                            function parseGenericCell(type, cell) {
                                const text = (cell && cell.innerText) ? cell.innerText.trim() : '';
                                if (!text) return '';
                                if (type === 'number') {
                                    const m = text.match(/(-?\d+)/);
                                    return m ? parseInt(m[1], 10) : 0;
                                }
                                if (type === 'currency') {
                                    const cleaned = text.replace(/[^0-9.-]+/g, '');
                                    const v = parseFloat(cleaned);
                                    return isNaN(v) ? 0 : v;
                                }
                                if (type === 'date') {
                                    const d = Date.parse(text);
                                    if (!isNaN(d)) return d;
                                    return 0;
                                }
                                return text.toLowerCase();
                            }

                            function sortBooksTableByColumn(colIndex, type, asc) {
                                const tbody = booksTable.querySelector('tbody');
                                if (!tbody) return;
                                const rows = Array.from(tbody.querySelectorAll('tr'));
                                rows.sort((a, b) => {
                                    const aCell = a.children[colIndex];
                                    const bCell = b.children[colIndex];
                                    const aVal = parseGenericCell(type, aCell);
                                    const bVal = parseGenericCell(type, bCell);
                                    if (typeof aVal === 'number' && typeof bVal === 'number') return asc ? aVal - bVal : bVal - aVal;
                                    if (typeof aVal === 'number' && typeof bVal !== 'number') return asc ? -1 : 1;
                                    if (typeof aVal !== 'number' && typeof bVal === 'number') return asc ? 1 : -1;
                                    if (aVal < bVal) return asc ? -1 : 1;
                                    if (aVal > bVal) return asc ? 1 : -1;
                                    return 0;
                                });
                                rows.forEach(r => tbody.appendChild(r));
                            }

                            const bookHeaders = booksTable.querySelectorAll('th');
                            const bookSortState = {};
                            bookHeaders.forEach(th => {
                                th.style.userSelect = 'none';
                                th.addEventListener('click', function() {
                                    const col = parseInt(th.getAttribute('data-col') || '-1', 10);
                                    if (col < 0) return;
                                    const type = th.getAttribute('data-type') || 'string';
                                    bookSortState[col] = !bookSortState[col];
                                    sortBooksTableByColumn(col, type, bookSortState[col]);
                                    // update indicators
                                    bookHeaders.forEach(h => { const si = h.querySelector('.sort-indicator'); if (si) si.innerText = ''; });
                                    const ind = th.querySelector('.sort-indicator'); if (ind) ind.innerText = bookSortState[col] ? ' ▲' : ' ▼';
                                });
                            });

                            // wire filter buttons
                            const btnF = document.getElementById('btnFilterAdminOverdueBooks');
                            const btnR = document.getElementById('btnResetAdminOverdueBooks');
                            if (btnF) btnF.addEventListener('click', function() { filterAdminOverdueBooksTable(); });
                            if (btnR) btnR.addEventListener('click', function() { resetAdminOverdueBooksTable(); });
                        }
                    } catch (e) { console.error('Error initializing admin overdue books UI', e); }
                } catch (e) {
                    console.log('Error initializing overdue table sorting:', e);
                }
            });
        </script>

