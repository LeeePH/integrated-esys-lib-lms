@model SystemLibrary.ViewModels.ReportViewModel
@{
    ViewData["Title"] = "Reports and Analytics";
}

<link rel="stylesheet" href="~/css/report.css" />

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Library System</h1>
    <a href="#" class="text-decoration-none">Log Out</a>
</div>

<div class="row">
    <!-- Main Content -->
    <div class="col-md-9">
        <div class="bg-light p-4" style="border-radius: 5px; min-height: 500px;">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-danger mb-0">Reports and Analytics</h3>
                <div>
                    <a href="@Url.Action("ExportReportPdf", new { timeRange = Model.TimeRange, from = Model.FromDate?.ToString("yyyy-MM-dd"), to = Model.ToDate?.ToString("yyyy-MM-dd") })" class="btn btn-outline-danger btn-sm me-2">
                        <i class="fas fa-file-pdf"></i> Export PDF
                    </a>
                    <a href="@Url.Action("ExportReportExcel", new { timeRange = Model.TimeRange, from = Model.FromDate?.ToString("yyyy-MM-dd"), to = Model.ToDate?.ToString("yyyy-MM-dd") })" class="btn btn-outline-success btn-sm me-2">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </a>
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Filters (aligned with Librarian) -->
            @{
                var tr = Model.TimeRange ?? "ThisMonth";
            }
            <input type="hidden" id="timeRangeValue" value="@tr" />

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h6 class="card-title mb-3"><i class="fas fa-filter"></i> Filter Reports</h6>

                    <!-- Quick Range Selection -->
                    <div class="row g-3 mb-3">
                        <div class="col-12">
                            <label class="form-label fw-semibold">Quick Time Range:</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="timeRange" id="thisMonth" value="ThisMonth" @(tr == "ThisMonth" ? "checked" : "") onchange="changeTimeRange(this.value)">
                                <label class="btn btn-outline-primary" for="thisMonth">This Month</label>

                                <input type="radio" class="btn-check" name="timeRange" id="lastMonth" value="LastMonth" @(tr == "LastMonth" ? "checked" : "") onchange="changeTimeRange(this.value)">
                                <label class="btn btn-outline-primary" for="lastMonth">Last Month</label>

                                <input type="radio" class="btn-check" name="timeRange" id="last3Months" value="Last3Months" @(tr == "Last3Months" ? "checked" : "") onchange="changeTimeRange(this.value)">
                                <label class="btn btn-outline-primary" for="last3Months">Last 3 Months</label>

                                <input type="radio" class="btn-check" name="timeRange" id="last6Months" value="Last6Months" @(tr == "Last6Months" ? "checked" : "") onchange="changeTimeRange(this.value)">
                                <label class="btn btn-outline-primary" for="last6Months">Last 6 Months</label>

                                <input type="radio" class="btn-check" name="timeRange" id="ytd" value="YearToDate" @(tr == "YearToDate" ? "checked" : "") onchange="changeTimeRange(this.value)">
                                <label class="btn btn-outline-primary" for="ytd">Year to Date</label>
                            </div>
                        </div>
                    </div>

                    <!-- Custom Month Range -->
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="border-top pt-3">
                                <label class="form-label fw-semibold mb-2">
                                    <i class="fas fa-calendar-alt"></i> Custom Month Range:
                                </label>
                                <div class="row g-2 align-items-end">
                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">From Month:</label>
                                        <input type="month" id="monthFrom" class="form-control" value="@(Model.FromDate?.ToString("yyyy-MM"))">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label small mb-1">To Month:</label>
                                        <input type="month" id="monthTo" class="form-control" value="@(Model.ToDate?.ToString("yyyy-MM"))">
                                    </div>
                                    <div class="col-md-4">
                                        <button class="btn btn-danger w-100" onclick="applyMonthRange()">
                                            <i class="fas fa-search"></i> Apply Custom Range
                                        </button>
                                    </div>
                                </div>
                                <small class="text-muted d-block mt-2">
                                    <i class="fas fa-info-circle"></i> Example: Select \"February 2025\" to \"April 2025\" to view data from Feb to April
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Current Filter Display -->
                    @if (Model.FromDate.HasValue && Model.ToDate.HasValue)
                    {
                        <div class="alert alert-info mt-3 mb-0">
                            <i class="fas fa-calendar-check"></i>
                            <strong>Current Period:</strong>
                            @Model.FromDate.Value.ToString("MMMM dd, yyyy") - @Model.ToDate.Value.ToString("MMMM dd, yyyy")
                            <span class="badge bg-primary ms-2">@((Model.ToDate.Value - Model.FromDate.Value).Days) days</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Tab Navigation -->
            <ul class="nav nav-tabs mb-4" id="reportTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="borrowing-tab" data-bs-toggle="tab" data-bs-target="#borrowing" type="button" role="tab">
                        <i class="fas fa-chart-line me-2"></i>Borrowing Trend
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="overdue-tab" data-bs-toggle="tab" data-bs-target="#overdue" type="button" role="tab">
                        <i class="fas fa-exclamation-triangle me-2"></i>Overdue Accounts
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="inventory-tab" data-bs-toggle="tab" data-bs-target="#inventory" type="button" role="tab">
                        <i class="fas fa-boxes me-2"></i>Inventory Status
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="student-tab" data-bs-toggle="tab" data-bs-target="#student" type="button" role="tab">
                        <i class="fas fa-users me-2"></i>Student Activity
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="reportTabContent">

                <!-- BORROWING TREND TAB -->
                <div class="tab-pane fade show active" id="borrowing" role="tabpanel">
                    <h5 class="text-danger mb-3"><i class="fas fa-chart-bar"></i> Borrowing Trend</h5>
                    <div class="mb-3 d-flex flex-wrap gap-2 justify-content-end align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <label class="mb-0">From:</label>
                            <input type="date" id="borrowFrom" class="form-control form-control-sm">
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <label class="mb-0">To:</label>
                            <input type="date" id="borrowTo" class="form-control form-control-sm">
                        </div>
                        <button class="btn btn-secondary btn-sm" onclick="setRange('month')">This Month</button>
                        <button class="btn btn-secondary btn-sm" onclick="setRange('year')">Year to Date</button>
                        <button class="btn btn-outline-danger btn-sm" onclick="applyBorrowFilter()"><i class="fas fa-filter"></i> Apply</button>
                        <button class="btn btn-outline-danger btn-sm" onclick="exportBorrowingPdf()"><i class="fas fa-file-pdf"></i> Export as PDF</button>
                    </div>

                    <!-- Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card text-center border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <div class="card-body text-white">
                                    <h2 class="mb-0">@Model.BorrowingTrend.TotalBorrowing</h2>
                                    <p class="mb-0">Total Borrowing</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center border-0 shadow-sm" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                                <div class="card-body text-white">
                                    <h2 class="mb-0">@Model.BorrowingTrend.TotalReturn</h2>
                                    <p class="mb-0">Total Return</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center border-0 shadow-sm" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                                <div class="card-body text-white">
                                    <h2 class="mb-0">@Model.BorrowingTrend.CurrentlyBorrowed</h2>
                                    <p class="mb-0">Currently Borrowed</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Monthly Chart -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title">Monthly Borrowing vs Returns</h6>
                            <canvas id="borrowingChart" height="80"></canvas>
                        </div>
                    </div>
                </div>

                <!-- OVERDUE ACCOUNTS TAB -->
                <div class="tab-pane fade" id="overdue" role="tabpanel">
                    <h5 class="text-danger mb-3"><i class="fas fa-exclamation-triangle"></i> Overdue Accounts</h5>
                    <div class="mb-3 d-flex flex-wrap gap-2 justify-content-end align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <label class="mb-0">From:</label>
                            <input type="date" id="overdueFrom" class="form-control form-control-sm">
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <label class="mb-0">To:</label>
                            <input type="date" id="overdueTo" class="form-control form-control-sm">
                        </div>
                        <button class="btn btn-secondary btn-sm" onclick="setOverdueRange('month')">This Month</button>
                        <button class="btn btn-secondary btn-sm" onclick="setOverdueRange('year')">Year to Date</button>
                        <button class="btn btn-outline-danger btn-sm" onclick="applyOverdueFilter()"><i class="fas fa-filter"></i> Apply</button>
                        <button class="btn btn-outline-danger btn-sm" onclick="exportOverduePdf()"><i class="fas fa-file-pdf"></i> Export as PDF</button>
                    </div>
                    <div class="mb-3 d-flex flex-wrap gap-2 align-items-center">
                        <label class="mb-0 fw-semibold">Table filter (Due Date by month):</label>
                        <input type="month" id="overdueTableFrom" class="form-control form-control-sm" style="width:auto;">
                        <input type="month" id="overdueTableTo" class="form-control form-control-sm" style="width:auto;">
                        <button class="btn btn-outline-primary btn-sm" onclick="filterOverdueTable()"><i class="fas fa-filter"></i> Filter Table</button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="resetOverdueTableFilter()">Reset</button>
                    </div>

                    <div class="table-responsive">
                        <table id="overdueTable" class="table table-striped table-hover">
                            <thead class="table-danger">
                                <tr>
                                    <th style="cursor:pointer" data-col="0">Student ID <span class="sort-indicator"></span></th>
                                    <th style="cursor:pointer" data-col="1">Student Name <span class="sort-indicator"></span></th>
                                    <th style="cursor:pointer" data-col="2">Book Title <span class="sort-indicator"></span></th>
                                    <th style="cursor:pointer" data-col="3" data-type="date">Due Date <span class="sort-indicator"></span></th>
                                    <th style="cursor:pointer" data-col="4" data-type="number">Days Overdue <span class="sort-indicator"></span></th>
                                    <th style="cursor:pointer" data-col="5" data-type="currency">Late Fees <span class="sort-indicator"></span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OverdueAccounts != null && Model.OverdueAccounts.Any())
                                {
                                    @foreach (var account in Model.OverdueAccounts)
                                    {
                                        <tr class="overdue-row" data-due="@account.DueDate.ToString("yyyy-MM-dd")">
                                            <td><i class="fas fa-user-circle"></i> @account.UserId.Substring(0, 10)...</td>
                                            <td>@account.UserName</td>
                                            <td><i class="fas fa-book"></i> @account.BookTitle</td>
                                            <td>@account.DueDate.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <span class="badge bg-danger">
                                                    @account.DaysOverdue day(s)
                                                </span>
                                            </td>
                                            <td class="fw-bold text-danger">₱@account.LateFees.ToString("N2")</td>
                                        </tr>
                                    }
                                    <tr class="table-warning">
                                        <td colspan="5" class="text-end fw-bold">Total Late Fees:</td>
                                        <td class="fw-bold text-danger">₱@Model.OverdueAccounts.Sum(a => a.LateFees).ToString("N2")</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                            <p class="text-muted">No overdue accounts</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                    <!-- OVERDUE BOOKS (Admin - same behavior as Librarian) -->
                    <div class="mt-4">
                        <h5 class="text-danger mb-3"><i class="fas fa-book-reader"></i> Overdue Books</h5>

                        <div class="mb-3 d-flex flex-wrap gap-2 align-items-center">
                            <label class="mb-0 fw-semibold">Table filter (Due Date by month):</label>
                            <input type="month" id="adminOverdueBooksFrom" class="form-control form-control-sm" style="width:auto;">
                            <input type="month" id="adminOverdueBooksTo" class="form-control form-control-sm" style="width:auto;">
                            <button class="btn btn-outline-primary btn-sm" id="btnFilterAdminOverdueBooks"><i class="fas fa-filter"></i> Filter Books</button>
                            <button class="btn btn-outline-secondary btn-sm" id="btnResetAdminOverdueBooks">Reset</button>
                        </div>

                        <div class="table-responsive">
                            @{
                                // Admin's OverdueAccounts is already per-book rows (OverdueAccountReport).
                                // Ensure we operate on a non-null list of the same element type to avoid conditional type conflicts.
                                var source = Model.OverdueAccounts ?? new List<SystemLibrary.ViewModels.OverdueAccountReport>();
                                var overdueBooks = source
                                    .Select(a => new {
                                        StudentName = a.UserName,
                                        StudentNumber = a.UserId,
                                        BookTitle = a.BookTitle,
                                        DueDate = a.DueDate,
                                        DaysOverdue = a.DaysOverdue,
                                        LateFee = a.LateFees
                                    })
                                    .OrderByDescending(b => b.DaysOverdue)
                                    .ThenBy(b => b.StudentName)
                                    .ToList();
                            }

                            @if (overdueBooks.Any())
                            {
                                <table id="adminOverdueBooksTable" class="table table-striped table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="cursor:pointer" data-col="0" data-type="string">Student <span class="sort-indicator"></span></th>
                                            <th style="cursor:pointer" data-col="1" data-type="string">Book Title <span class="sort-indicator"></span></th>
                                            <th style="cursor:pointer" data-col="2" data-type="date">Due Date <span class="sort-indicator"></span></th>
                                            <th style="cursor:pointer" data-col="3" data-type="number">Days Overdue <span class="sort-indicator"></span></th>
                                            <th style="cursor:pointer" data-col="4" data-type="currency">Late Fee <span class="sort-indicator"></span></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var book in overdueBooks)
                                        {
                                            <tr>
                                                <td>@book.StudentName<br/><small class="text-muted">@book.StudentNumber</small></td>
                                                <td>@book.BookTitle</td>
                                                <td>@book.DueDate.ToString("MMM dd, yyyy")</td>
                                                <td>@book.DaysOverdue day(s)</td>
                                                <td>₱@book.LateFee.ToString("N2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <p>No overdue books found for the selected period.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- INVENTORY STATUS TAB -->
                <div class="tab-pane fade show active" id="inventory" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="text-danger mb-0"><i class="fas fa-boxes"></i> Inventory Status</h5>
                        <button class="btn btn-danger btn-sm" onclick="exportInventoryPdf()">
                            <i class="fas fa-file-pdf me-2"></i>Export as PDF
                        </button>
                    </div>

                    <!-- Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-center border-0 shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-book fa-2x text-primary mb-2"></i>
                                    <h3 class="mb-0">@Model.InventoryStatus.TotalBooks</h3>
                                    <small class="text-muted">Total Books</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center border-0 shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-layer-group fa-2x text-info mb-2"></i>
                                    <h3 class="mb-0">@Model.InventoryStatus.TotalCopies</h3>
                                    <small class="text-muted">Total Copies</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center border-0 shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                    <h3 class="mb-0">@Model.InventoryStatus.AvailableCopies</h3>
                                    <small class="text-muted">Available Copies</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center border-0 shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-book-reader fa-2x text-warning mb-2"></i>
                                    <h3 class="mb-0">@Model.InventoryStatus.BorrowedCopies</h3>
                                    <small class="text-muted">Borrowed Copies</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Low Stock Books -->
                        @if (Model.InventoryStatus.LowStockBooks != null && Model.InventoryStatus.LowStockBooks.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var book in Model.InventoryStatus.LowStockBooks)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">@book.Title</h6>
                                                <small class="text-muted">@book.Author</small>
                                            </div>
                                            <span class="badge bg-warning">@book.AvailableCopies left</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <!-- Most Borrowed Books -->
                        @if (Model.InventoryStatus.MostBorrowedBooks != null && Model.InventoryStatus.MostBorrowedBooks.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var book in Model.InventoryStatus.MostBorrowedBooks)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">@book.Title</h6>
                                                <small class="text-muted">@book.Author</small>
                                            </div>
                                            <span class="badge bg-success">@book.BorrowCount times</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <!-- STUDENT ACTIVITY TAB -->
                        <div class="tab-pane fade" id="student" role="tabpanel">
                            <h5 class="text-danger mb-3"><i class="fas fa-users"></i> Student Activity</h5>
                            <div class="mb-3 d-flex justify-content-end">
                                <button class="btn btn-outline-danger btn-sm" onclick="exportStudentActivityPdf()"><i class="fas fa-file-pdf"></i> Export as PDF</button>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-primary">
                                        <tr>
                                            <th>Student ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Total Borrowings</th>
                                            <th>Current Borrowings</th>
                                            <th>Overdue Books</th>
                                            <th>Total Late Fees</th>
                                            <th>Last Activity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.StudentActivity != null && Model.StudentActivity.Any())
                                        {
                                            @foreach (var student in Model.StudentActivity)
                                            {
                                                <tr>
                                                    <td><i class="fas fa-user-circle"></i> @student.UserId.Substring(0, 10)...</td>
                                                    <td>@student.UserName</td>
                                                    <td><i class="fas fa-envelope"></i> @student.Email</td>
                                                    <td><span class="badge bg-primary">@student.TotalBorrowings</span></td>
                                                    <td><span class="badge bg-info">@student.CurrentBorrowings</span></td>
                                                    <td>
                                                        @if (student.OverdueBooks > 0)
                                                        {
                                                            <span class="badge bg-danger">@student.OverdueBooks</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">0</span>
                                                        }
                                                    </td>
                                                    <td class="@(student.TotalLateFees > 0 ? "text-danger fw-bold" : "")">
                                                        ₱@student.TotalLateFees.ToString("N2")
                                                    </td>
                                                    <td>@student.LastActivity.ToString("MM/dd/yyyy")</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center py-4">
                                                    <i class="fas fa-users-slash fa-2x mb-2 text-muted"></i>
                                                    <p class="text-muted">No student activity in this period</p>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
        <script>
            // Borrowing Trend Chart
            document.addEventListener('DOMContentLoaded', function() {
                // prefill custom dates from query (for header filters)
                const params = new URLSearchParams(window.location.search);
                const fromQ = params.get('from');
                const toQ = params.get('to');
                const trVal = document.getElementById('timeRangeValue')?.value;
                if (trVal) {
                    const sel = document.getElementById('timeRange');
                    if (sel) sel.value = trVal;
                }
                if (fromQ) {
                    document.getElementById('globalFrom').value = fromQ;
                    const bf = document.getElementById('borrowFrom'); if (bf) bf.value = fromQ;
                    const of = document.getElementById('overdueFrom'); if (of) of.value = fromQ;
                }
                if (toQ) {
                    document.getElementById('globalTo').value = toQ;
                    const bt = document.getElementById('borrowTo'); if (bt) bt.value = toQ;
                    const ot = document.getElementById('overdueTo'); if (ot) ot.value = toQ;
                }

                const ctx = document.getElementById('borrowingChart');
                if (ctx) {
